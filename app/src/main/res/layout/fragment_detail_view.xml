<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="johnpark.sunshine.DetailViewFragment"
    android:id="@+id/relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentDay"
        android:paddingTop="16dp"
        android:textSize="26sp"
        android:fontFamily="sans-serif-condensed"
        android:text="text"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tempHigh"
        android:layout_alignEnd="@+id/tempHigh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textSize="24sp"
        android:textIsSelectable="true"
        android:fontFamily="sans-serif-light"
        android:focusableInTouchMode="true"
        android:focusable="false"
        android:text="text"
        android:layout_above="@+id/tempHigh"
        android:layout_alignRight="@+id/wind"
        android:layout_alignEnd="@+id/wind" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tempMain"
        android:textSize="86sp"
        android:fontFamily="sans-serif-light"
        android:text="10"
        android:layout_below="@+id/tempHigh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/art_clear"
        android:layout_alignBottom="@+id/tempMain"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempHigh"
        android:textSize="48sp"
        android:fontFamily="sans-serif-light"
        android:enabled="true"
        android:text="10"
        android:paddingTop="5dp"
        android:layout_below="@+id/currentDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempLow"
        android:textSize="48sp"
        android:fontFamily="sans-serif-light"
        android:enabled="true"
        android:layout_below="@+id/tempMain"
        android:layout_alignLeft="@+id/tempMain"
        android:layout_alignStart="@+id/tempMain"
        android:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/forecast"
        android:enabled="true"
        android:fontFamily="sans-serif-condensed"
        android:text="text"
        android:textSize="22sp"
        android:layout_below="@+id/tempMain"
        android:layout_alignLeft="@+id/wind"
        android:layout_alignStart="@+id/wind" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:paddingTop="6dp"
        android:text="text"
        android:layout_below="@+id/wind"
        android:layout_alignLeft="@+id/pressure"
        android:layout_alignStart="@+id/pressure" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure"
        android:paddingTop="6dp"
        android:text="text"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_below="@+id/humidity"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wind"
        android:paddingTop="6dp"
        android:text="text"
        android:layout_below="@+id/tempLow"
        android:layout_alignLeft="@+id/humidity"
        android:layout_alignStart="@+id/humidity" />
</RelativeLayout>
